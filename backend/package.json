{
	"name": "hello-prisma",
	"license": "MIT",
	"scripts": {
		"dev": "nodemon --ignore scripts/ --exec ts-node ./src/main/server.ts",
		"build": "tsc",
		"start": "node ./dist/main/server.js",
		"test": "jest",
		"test:watch": "jest --watch",
		"test:coverage": "jest --coverage",
		"schema:combine": "node scripts/combine-schemas.js",
		"db:generate": "npm run schema:combine && npx prisma generate",
		"db:push": "npm run schema:combine && npx prisma db push",
		"db:migrate": "npm run schema:combine && npx prisma migrate dev"
	},
	"dependencies": {
		"@prisma/client": "6.9.0",
		"@prisma/extension-accelerate": "2.0.2",
		"@types/bcrypt": "^6.0.0",
		"@types/cookie-parser": "^1.4.9",
		"@types/csurf": "^1.11.5",
		"@types/node": "22.15.32",
		"axios": "^1.12.2",
		"cookie-parser": "^1.4.7",
		"cors": "^2.8.5",
		"csurf": "^1.2.2",
		"dotenv": "16.6.1",
		"express": "^4.18.2",
		"firebase-admin": "^13.5.0",
		"helmet": "^7.1.0",
		"jsonwebtoken": "^9.0.2",
		"nodemailer": "^7.0.9",
		"rate-limiter-flexible": "^8.1.0"
	},
	"devDependencies": {
		"@types/cors": "^2.8.17",
		"@types/express": "^4.17.21",
		"@types/jest": "^30.0.0",
		"@types/nodemailer": "^7.0.2",
		"@types/supertest": "^6.0.3",
		"nodemon": "^3.1.10",
		"prisma": "6.9.0",
		"supertest": "^7.1.4",
		"ts-jest": "^29.4.4",
		"ts-node": "10.9.2",
		"typescript": "5.8.2"
	}
}
